<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".UI.FourModule.MyUserInfoActivity">
    <include layout="@layout/toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:orientation="vertical"
                android:background="@mipmap/im_background"
                android:gravity="center">

                <ImageView
                    android:id="@+id/riv_userinfo_icon"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="45dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_user"
                   />
                <EditText
                    android:id="@+id/et_signature"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_30"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_sg"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名"
                        android:textColor="@color/gray3" />

                    <EditText
                        android:id="@+id/text_userinfo_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:layout_marginRight="14dp"
                        android:gravity="center_vertical|right"
                        android:hint="请填写"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@color/gray6"
                        android:textSize="@dimen/sp_28"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/graye" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_sg"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="性别"
                        android:textColor="@color/gray3" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:gravity="right|center_vertical"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="14dp"
                        android:layout_alignParentTop="true"
                        android:id="@+id/radiogroup_userinfo_male">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="男"
                            android:textColor="@color/gray6"
                            android:id="@+id/radio1" />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="女"
                            android:textColor="@color/gray6"
                            android:checked="false"
                            android:id="@+id/radio2" />
                    </RadioGroup>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/graye" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_sg"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="昵称"
                        android:textColor="@color/gray3" />

                    <EditText
                        android:id="@+id/text_userinfo_nice_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:layout_marginRight="14dp"
                        android:gravity="center_vertical|right"
                        android:hint="请填写"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textSize="@dimen/sp_28"
                        android:textColor="@color/gray6"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/graye" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_sg"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="出生年月"
                        android:textColor="@color/gray3"/>

                    <EditText
                        android:id="@+id/text_userinfo_birthday"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/ic_right"
                        android:editable="false"
                        android:focusable="false"
                        android:gravity="center_vertical|right"
                        android:hint="请选择"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@color/gray6"
                        android:textSize="@dimen/sp_28"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/graye" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_sg"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身份证号"
                        android:textColor="@color/gray3" />

                    <EditText
                        android:id="@+id/text_userinfo_IDcard"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:layout_marginRight="14dp"
                        android:gravity="center_vertical|right"
                        android:hint="请填写"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textSize="@dimen/sp_28"
                        android:textColor="@color/gray6"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_sg"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学校"
                        android:textColor="@color/gray3" />

                    <EditText
                        android:id="@+id/text_userinfo_school"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="请选择"
                        android:editable="false"
                        android:focusable="false"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/ic_right"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textSize="@dimen/sp_28"
                        android:textColor="@color/gray6"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/graye" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_sg"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="入学年份"
                        android:textColor="@color/gray3"/>

                    <EditText
                        android:id="@+id/text_userinfo_inschooldate"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="请选择"
                        android:editable="false"
                        android:focusable="false"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/ic_right"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textSize="@dimen/sp_28"
                        android:textColor="@color/gray6"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/graye" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_sg"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="院系"
                        android:textColor="@color/gray3" />

                    <EditText
                        android:id="@+id/text_userinfo_college"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="请选择"
                        android:editable="false"
                        android:focusable="false"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/ic_right"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textSize="@dimen/sp_28"
                        android:textColor="@color/gray6"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/graye" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_sg"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="专业"
                        android:textColor="@color/gray3" />

                    <EditText
                        android:id="@+id/text_userinfo_profession"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="请选择"
                        android:editable="false"
                        android:focusable="false"
                        android:drawablePadding="8dp"
                        android:drawableRight="@mipmap/ic_right"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textSize="@dimen/sp_28"
                        android:textColor="@color/gray6"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/graye" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_sg"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="班级"
                        android:textColor="@color/gray3" />

                    <EditText
                        android:id="@+id/text_userinfo_class"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="请选择"
                        android:editable="false"
                        android:focusable="false"
                        android:drawablePadding="8dp"
                        android:drawableRight="@mipmap/ic_right"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textSize="@dimen/sp_28"
                        android:textColor="@color/gray6"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/graye" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学号"
                        android:textColor="@color/gray3"/>

                    <EditText
                        android:id="@+id/text_userinfo_school_code"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:layout_marginRight="14dp"
                        android:gravity="center_vertical|right"
                        android:hint="请填写"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textSize="@dimen/sp_28"
                        android:textColor="@color/gray6"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/graye" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_sg"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="离校年份"
                        android:textColor="@color/gray3" />

                    <EditText
                        android:id="@+id/text_userinfo_outschooldate"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="请选择"
                        android:editable="false"
                        android:focusable="false"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/ic_right"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textSize="@dimen/sp_28"
                        android:textColor="@color/gray6"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/graye" />

            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>
