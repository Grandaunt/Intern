<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.win.newintern3.UI.MainModule.BIntern.BMainActivity"
    android:background="@color/graye"
    android:orientation="vertical">
    <include layout="@layout/toolbar" />
    <ImageButton
        android:id="@+id/imB_newIntern"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="95dp"
        android:background="@null"
        android:src="@mipmap/im_new_intern"
        android:scaleType="fitXY"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/gray6"
                android:textSize="12sp"
                android:text="-推荐职位-"/>

            </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/graya"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_com_job"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>
