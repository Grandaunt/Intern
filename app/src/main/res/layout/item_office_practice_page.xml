<?xml version="1.0" encoding="utf-8"?>
<!--实习培训Item-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:padding="13dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_com_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_com_logo"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12.5dp"
        android:layout_toEndOf="@+id/item_train_icon"
        android:layout_toRightOf="@+id/item_train_icon">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
                    <TextView
                        android:id="@+id/item_com_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="业务运维工程师"
                        android:maxEms="10"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@color/gray3"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/item_com_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8千-1万"
                    android:textSize="12sp"
                    android:textColor="@color/Orange"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <TextView
                android:id="@+id/item_com_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/gray9"
                android:layout_marginTop="10dp"
                android:textSize="10sp"
                android:layout_toLeftOf="@+id/item_train_time"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Google" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                <TextView
                    android:id="@+id/item_post_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="互联网"
                    android:textSize="9sp"
                    android:textColor="@color/gray9" />
                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginRight="12.5dp"-->
                        <!--android:layout_marginLeft="5dp"-->
                        <!--android:textSize="10sp"-->
                        <!--android:text="|"-->
                        <!--android:textColor="@color/gray9" />-->
                    <!--<TextView-->
                        <!--android:id="@+id/item_post_num"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="2"-->
                        <!--android:textSize="10sp"-->
                        <!--android:textColor="@color/gray9"-->
                     <!--/>-->
                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="人"-->
                        <!--android:textSize="10sp"-->
                        <!--android:textColor="@color/gray9"-->
                        <!--/>-->
                    </LinearLayout>

                <TextView
                    android:id="@+id/item_com_posted_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="07-18"
                    android:textSize="10sp"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/gray9"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/graya"/>
</LinearLayout>
