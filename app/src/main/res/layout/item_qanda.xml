<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graye"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:id="@+id/ly_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


            <ImageView
                android:id="@+id/im_left"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_com_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin">
            <TextView
                android:id="@+id/tv_left_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="鸣人" />


        <TextView
            android:id="@+id/tv_left_content"
            android:layout_width="224.5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/view_linear"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="21321321313213213213213213221354545545455454151321321321" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical">
        <TextView
            android:id="@+id/tv_right_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="静香" />
            <!--<LinearLayout-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@drawable/input"-->
                <!--android:orientation="vertical">-->
        <TextView
            android:id="@+id/tv_right_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/view_linear"
            android:layout_marginTop="12.5dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="132132" />


        </LinearLayout>


            <ImageView
                android:id="@+id/im_right"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_com_logo" />

    </LinearLayout>


</RelativeLayout>