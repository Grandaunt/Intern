<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >


    <!--<View-->
        <!--android:id="@+id/view_1"-->
        <!--android:layout_width="2dp"-->
        <!--android:layout_height="15dp"-->
        <!--android:layout_marginLeft="31dp"-->
        <!--android:background="#f4f4f4" />-->



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_liner_round" />

        <View
            android:id="@+id/view_2"
            android:layout_width="2.5dp"
            android:layout_height="92dp"
            android:layout_below="@+id/image"
            android:layout_marginLeft="19dp"
            android:background="#f4f4f4" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout5"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/item_main_intern_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_28"
                android:text="2016-01-01"/>
            <TextView
                android:id="@+id/item_main_intern_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray6"
                android:textSize="@dimen/sp_28"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="UI"/>

            <TextView
                android:id="@+id/item_main_intern_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:textSize="@dimen/sp_28"
                android:text="本科 | 计算机"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_item_main_intern_eit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@mipmap/ic_edit_null"/>
        <TextView

            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:text="编辑"
            android:layout_height="wrap_content"

           />
        </LinearLayout>
    </RelativeLayout>





</RelativeLayout>