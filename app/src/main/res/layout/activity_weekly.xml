<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    tools:context="com.example.win.newintern3.UI.MainModule.AIntern.WeeklyActivity">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@color/grayb"
                android:orientation="vertical"

                >




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:background="@color/white"
                    android:layout_marginTop="0.2dp"
                    android:layout_marginBottom="0.2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="实习企业"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                    <EditText
                        android:id="@+id/text_aw_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="请填写工作岗位"
                        android:textColorHint="@color/gray9"
                        android:textSize="14dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:background="@color/white"
                    android:layout_marginBottom="0.2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="实习地点"
                        android:textColor="@android:color/black" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                    <EditText
                        android:id="@+id/text_aw_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请填写工作地点"
                        android:gravity="center_vertical|right"
                        android:textColorHint="@color/gray9"
                        android:textSize="14dp"
                        />

                    <!--<ImageButton-->
                    <!--android:layout_height="15dp"-->
                    <!--android:layout_width="16dp"-->
                    <!--android:paddingLeft="8dp"-->
                    <!--android:scaleType="fitXY"-->
                    <!--android:src="@mipmap/ic_right"-->
                    <!--android:background="@color/white"/>-->

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:background="@color/white"
                    android:layout_marginBottom="0.2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开始时间"
                        android:textColor="@android:color/black" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/text_weekly_starttime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="请选择开始时间"
                        android:gravity="center_vertical|right"
                        android:drawablePadding="8dp"
                        android:textColorHint="@color/grayb"
                        android:textColor="@color/gray5"
                        android:drawableRight="@mipmap/ic_right"
                        android:textSize="14sp"
                        />
                    <!--<ImageButton-->
                    <!--android:layout_height="15dp"-->
                    <!--android:layout_width="16dp"-->
                    <!--android:paddingLeft="8dp"-->
                    <!--android:scaleType="fitXY"-->
                    <!--android:src="@mipmap/ic_right"-->
                    <!--android:background="@color/white"/>-->
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:background="@color/white"
                    android:layout_marginBottom="0.2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="结束时间"
                        android:textColor="@android:color/black" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/text_weekly_endtime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColorHint="@color/grayb"
                        android:textColor="@color/gray5"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="请选择结束时间"
                        android:drawablePadding="8dp"
                        android:drawableRight="@mipmap/ic_right"
                        android:textSize="14sp"
                        />
                </LinearLayout>
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_height="wrap_content"
                android:background="@color/grayb"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="0.2dp"
                    android:layout_marginBottom="0.2dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="15dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工作简述"
                        android:paddingBottom="13dp"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="@color/grayb" />
                    <android.support.design.widget.TabLayout
                        android:id="@+id/tab_aw_tab"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:color/white"
                        app:tabIndicatorColor="@color/colorPrimary"
                        app:tabMode="fixed"
                        app:tabSelectedTextColor="@color/colorPrimary"
                        app:tabTextColor="@android:color/black" />

                    <android.support.v4.view.ViewPager
                        android:id="@+id/page_aw_journal"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_height="wrap_content"
                android:background="@color/grayb"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="0.2dp"
                    android:layout_marginBottom="0.2dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="本周小结"
                        android:paddingBottom="13dp"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="@color/grayb" />

                    <EditText
                        android:id="@+id/edt_aw_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="start"
                        android:hint="请输入本周小结"
                        android:minHeight="160dp"
                        android:paddingTop="13dp"
                        android:textColorHint="@color/gray9"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_height="wrap_content"
                android:background="@color/grayb"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="0.2dp"
                    android:layout_marginBottom="0.2dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下周计划"
                        android:paddingBottom="13dp"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="@color/grayb" />

                    <EditText
                        android:id="@+id/edt_aw_plan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="start"
                        android:hint="请输入下周计划"
                        android:minHeight="160dp"
                        android:paddingTop="13dp"
                        android:textColorHint="@color/gray9"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                />


            <!--<Button-->
            <!--android:id="@+id/btn_aw_submit"-->
            <!--style="?android:attr/borderlessButtonStyle"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="52dp"-->
            <!--android:layout_margin="32dp"-->
            <!--android:background="@drawable/login_in_button"-->
            <!--android:text="提交日志"-->
            <!--android:textColor="@android:color/white"-->
            <!--android:textSize="20sp" />-->
        </LinearLayout>

    </ScrollView>
</LinearLayout>
