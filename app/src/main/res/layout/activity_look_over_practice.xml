<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:background="@color/graye"
    tools:context=".UI.MainModule.BIntern.LookOverBasePracticeActivity">

    <include layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_above="@+id/view_bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/text_view_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/view_linear"
                    android:orientation="horizontal"
                    android:padding="@dimen/activity_vertical_margin">

                    <ImageView
                        android:id="@+id/img_alop_practice_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/ic_com_logo"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/activity_vertical_margin">

                        <TextView
                            android:id="@+id/text_alop_practice_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="北京晟景世纪科技有限公司"
                            android:textColor="@color/gray3"
                            android:textSize="@dimen/sp_32" />

                        <TextView
                            android:id="@+id/text_alop_practice_scale"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/text_view_margin"
                            android:text="公司规模:"
                            android:textSize="@dimen/sp_28"
                            android:textColor="@color/gray9" />

                        <TextView
                            android:id="@+id/text_alop_practice_statistics"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/text_view_margin"
                            android:text="浏览量:|申请量:"
                            android:textSize="@dimen/sp_28"
                            android:textColor="@color/gray9" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_view_margin"
                    android:background="@drawable/view_linear"
                    android:orientation="vertical"
                    android:padding="@dimen/activity_vertical_margin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_alop_practice_time_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:minWidth="200dp"
                            android:text="实习开始: "
                            android:textSize="@dimen/sp_28"
                            android:textColor="@color/gray9" />

                        <TextView
                            android:id="@+id/text_alop_practice_start_time_end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:minWidth="200dp"
                            android:text="实习结束: "
                            android:textSize="@dimen/sp_28"
                            android:textColor="@color/gray9" />
                    </LinearLayout>

                    <!--<LinearLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginTop="@dimen/text_view_margin"-->
                        <!--android:orientation="horizontal">-->

                        <!--<TextView-->
                            <!--android:id="@+id/text_alop_practice_total_people_num"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_weight="1"-->
                            <!--android:minWidth="200dp"-->
                            <!--android:text="实习人数:"-->
                            <!--android:textColor="@android:color/black" />-->

                        <!--<TextView-->
                            <!--android:id="@+id/text_alop_practice_start_time_stop"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_weight="1"-->
                            <!--android:minWidth="200dp"-->
                            <!--android:text="申请截止:"-->
                            <!--android:textColor="@android:color/black" />-->
                    <!--</LinearLayout>-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_view_margin"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_alop_practice_contacts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:minWidth="200dp"
                            android:text="联  系  人: "
                            android:textSize="@dimen/sp_28"
                            android:textColor="@color/gray9" />

                        <TextView
                            android:id="@+id/text_alop_practice_contact_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:autoLink="email|phone|web"
                            android:textColorLink="@color/colorPrimary"
                            android:minWidth="200dp"
                            android:text="联系电话: "
                            android:textSize="@dimen/sp_28"
                            android:textColor="@color/gray9" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_alop_practice_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_view_margin"
                        android:layout_weight="1"
                        android:minWidth="200dp"
                        android:text="实习地点: "
                        android:textSize="@dimen/sp_28"
                        android:textColor="@color/gray9" />

                    <!--<TextView-->
                        <!--android:id="@+id/text_alop_practice_welfare"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginTop="@dimen/text_view_margin"-->
                        <!--android:layout_weight="1"-->
                        <!--android:minWidth="200dp"-->
                        <!--android:text="实习福利:"-->
                        <!--android:textColor="@android:color/black" />-->

                </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_alop_practice_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>


            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/view_bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/view_linear"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_alop_repost"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:background="@drawable/buttom_common"
                android:text="确定"
                android:enabled="false"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
