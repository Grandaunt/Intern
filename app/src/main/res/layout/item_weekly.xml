<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/img_ij_type"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/text_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016计算机暑期实习"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_28" />
        <TextView
            android:id="@+id/text_item_company"
            android:layout_width="wrap_content"
            android:layout_marginTop="12.5dp"
            android:layout_height="wrap_content"
            android:text="2016计算机暑期实习"
            android:textSize="@dimen/sp_28"
            android:textColor="@color/gray9"/>

        <TextView
            android:id="@+id/text_item_time"
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_28"
            android:text="2016计算机暑期实习"
            android:textColor="@color/gray9"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center">
    <ImageView
        android:id="@+id/img_ij_type"
        android:layout_width="17.5dp"
        android:src="@mipmap/ic_submitted"
        android:layout_height="17.5dp"
        />
    <TextView
        android:id="@+id/text_item_apply_status"
        android:layout_width="wrap_content"
        android:layout_marginLeft="7.5dp"
        android:layout_height="wrap_content"
        android:text="已提交"
        android:textColor="@color/colorAccent"/>
</LinearLayout>
</LinearLayout>
