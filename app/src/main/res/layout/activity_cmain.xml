<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graya"
    android:orientation="vertical"
    tools:context="com.example.win.newintern3.UI.ThreeModule.CMainActivity">
    <include layout="@layout/toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view_bottom">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_height="60dp"
            android:layout_width="match_parent"
            android:background="@color/white"
            >
            <TextView
                android:id="@+id/ciicle_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="22dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="标题"/>
            </LinearLayout>

        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@color/graya"/>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/cricle_user_im"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_margin="10dp"
                android:src="@mipmap/ic_user"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/cricle_user_username"
                    android:layout_height="30dp"
                    android:gravity="center|left"
                    android:layout_width="match_parent"
                    android:text="名字"/>
                <TextView
                    android:id="@+id/cricle_user_signature"
                    android:layout_height="30dp"
                    android:gravity="center|left"
                    android:layout_width="wrap_content"
                    android:text="asd"/>
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:id="@+id/im_cricle_info_image"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="fitXY"
            android:src="@mipmap/im_cricle_info_image"/>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">
         <TextView
             android:layout_height="match_parent"
             android:layout_width="wrap_content"
             android:layout_margin="10dp"
             android:text="sad"
             android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/ciicle_content"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:text="ciicle_content"/>
            </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:text="aaaciicle_address"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/ciicle_address"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:text="aaaciicle_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:text="aaciicle_time"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/ciicle_time"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:text="aaciicle_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:text="aciicle_has_people"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/ciicle_has_people"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:text="aaciicle_content"/>
        </LinearLayout>
        <View
            android:layout_height="80dp"
            android:layout_width="match_parent"
            />




         <Button
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="aciicle_join"
             android:textColor="@color/white"
             android:background="@color/colorPrimary"/>
        </LinearLayout>
</ScrollView>
</LinearLayout>
